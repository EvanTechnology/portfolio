.footer {
    height: 370px;
    background-color: $footer-color;
    margin-top: auto;
}
.footer-container {
    display: flex;
    align-items: flex-starts;
    justify-content: space-between;
    padding-top: 70px;
}
.footer__year, .footer__name {
    width: 10%;
}
.footer__main {
    width: 60%;
    display: flex;
    flex-direction: column;
}
.year {
    font-size: 36px;
    font-weight: bold;
    padding-left: 50px;
    position: relative;
    &::before {
        content: "Â©";
        position: absolute;
        top: 0;
        left: 0;
    }
}
.footer__name-owner {
    font-size: 18px;
    color: #ffffff;
    font-weight: bold;
    text-transform: uppercase;
    margin-bottom: 25px;
}
.footer__content {
    color: #ffffff;
    display: flex;
    justify-content: space-between;
    margin-top: 50px;
}
.footer__content-column {
    width: 45%;
}
.footer__content-text {
    max-width: 315px;
    margin-bottom: 30px;
    opacity: 0.5;
}
.footer__quote-text {
    margin-bottom: 30px;
    opacity: 0.5;
}
.footer__quote-author {
    opacity: 1;
    color: #ffffff;
    font-style: italic;
}
.aboutme-section {
    background: url('../images/content/bg_about_me_page.png');
    margin-top: -45%;
}
.aboutme__container {
    justify-content: center;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 100px;
}
.aboutme__content {
    color: #939393;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    width: 1000px;
}
.profile {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    width: 40%;
}
.profile__image {
    margin: auto;
    margin-bottom: 70px;
}
.profile__avatar {
    width: 210px;
    height: 210px;
    border: solid 1px $text-color;
    border-radius: 50%;
    overflow: hidden;
}
.profile__photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
}
.profile__info {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
}
.profile__line {
    display: flex;
    justify-content: flex-start;
    width: 100%;
    margin-bottom: 1.25rem;
    &-name {
        font-weight: bold;
        //margin-right: 1.5625rem;
        width: 35%;
    }
    &-info {
        text-align: left;
        width: 65%;
        color: #ffffff;
    }
}
.aboutme__description {
    width: 60%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: left;
    padding-left: 60px;
}
.intro {
    font-weight: 700;
    &__greeting {
        margin-bottom: 30px
    }
    &__text {
        margin-bottom: 100px
    }
}

.intro__name {
    color: #ffffff;
    font-size: 36px;
    line-height: 48px;
    margin-bottom: 30px;
}
.aboutme__ps {
    font-style: italic;
    position: relative;
    &:before {
        content: "";
        display:inline-block;
        width: 25px;
        height: 25px;
        position: absolute;
        top: 0;
        left: -50px;
        background: svg-load('star.svg', fill=$orange, width=100%, height=100%);
    }
}
.slider-pics__btn-right, .slider-pics__btn-left {
    width: 50px;
    height: 50px;
    color: #636363;
    background-color: #353e4e;
    font-size: 20px;
    font-weight: 900;
    border: solid 1px transparent;
    &:hover {
        color: #ffffff;
    }
    &.closed {
        color: #353e4e;
    }
    &:focus {
        border-color: $orange;
    }
}
.slider__list {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
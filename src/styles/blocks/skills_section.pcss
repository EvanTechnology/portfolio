.skills {
    position: relative;
    background: url('../images/content/bg_skills_page.jpg');
}
.skills__container {
    justify-content: center;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding-left: 25%;
    color: #949494;
    @include desktop {
        padding-left: 18%;
    }
    @include tablets {
        padding-left: 0;
        align-items: center;
        justify-content: flex-start;
        padding-top: 100px;
    }
}

.skills__image {
    position: absolute;
    bottom: -10%;
    width: 46%;
    right: 63%;
    @include desktop {
        //height: 60%;
    }
    @include tablets {
        transform: rotate(-90deg);
        left: 0;
        bottom: -6%;
    }
}
.skills__title {
    color: #ffffff;
    font-size: 30px;
    margin-bottom: 50px;
}
.skills__text {
    @include tablets {
        text-align: center;
        width: 75%;
    }
    @include phones {
        text-align: left;
        width: 85%;
    }
}
.skills__image-pic {
    object-fit: cover;
    object-position: right;
    width: 100%;
    height: 100%;
}
.skills__text {
    font-size: 16px;
    font-weight: semibold;
    line-height: 30px;
    max-width: 600px;
    margin-bottom: 80px;
}
.skills__content {
    width: 100%;
    padding-left: 10%;
    @include desktop {
        padding-left: 8%;
    }
    @include tablets {
        padding-left: 0;
    }
}
.skills__content-title {
    font-size: 24px;
    font-weight: bold;
    line-height: 48px;
    color: white;
    margin-bottom: 30px;
    @include tablets {
        text-align: center;
    }
}
.skills__visual {
    display: flex;
    justify-content: flex-start;
    //margin-left: -60px;
    margin-bottom: 60px;
    @include tablets {
        flex-wrap: wrap;
        justify-content: space-evenly;
        margin-bottom: 10px;
    }
}
.skills__visual-item {
    width: 135px;
    height: 135px;
    font-size: 18px;
    font-weight: bold;
    line-height: 30px;
    text-align: center;
    border: solid 3px #636363;
    border-radius: 50%;
    margin-right: 5%;
    display: flex;
    align-items: center;
    justify-content: center;
    @include tablets {
        margin-bottom: 5%;
    }
}
.skills__visual-line {
    width: 140px;
    height: 140px;
    fill: none;
    stroke: $orange;
    stroke-width: 8px;
    position: absolute;
    stroke-dasharray: 284;
}

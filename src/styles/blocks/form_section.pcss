.contacts {
    display: flex;
    flex-direction: column;
    @include tablets {
        align-items: center;
    }
}
.contacts__title {
    color: #ffffff;
    margin-bottom: 80px;
    @include tablets {
        margin-top: 25px;
    }
}
.form {
    color: #ffffff;
    width: 870px;
    @include desktop {
        width: 700px;
    };
    @include tablets {
        width: 75%;
    };
    @include phones {
        width: 95%;
    };
}
.form__column {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
}
.form__row {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
    margin-bottom: 40px;
    &:last-child {
        margin-top: 20px;
    }
    @include tablets {
        flex-direction: column;
        margin-bottom: 0;
    }
}
.form-block {
    width: 50%;
    border-bottom: solid 1px #ffffff;
    flex: 1;
    padding-left: 50px;
    position: relative;
    &:nth-child(2n) {
        margin-left: 90px;
    }
    @include tablets {
        width: 95%;
        margin-bottom: 30px;
        &:nth-child(2n) {
            margin-left: 0px;
        }
    }
    &:before {
        content: "";
        display: inline-block;
        position: absolute;
        width: 30px;
        height: 30px;
        top: 40px;
        left: 0;
    }
    &--name {
        &:before {
            background: svg-load('user.svg', fill=#636363, width=100%, height=100%);
        }
    }
    &--mail {
        &:before {
            background: svg-load('envelope.svg', fill=#636363, width=100%, height=100%);
        }
    }
    &--message {
        &:before {
            background: svg-load('message.svg', fill=#636363, width=100%, height=100%);
        }
    }
}
.form-block__title {
    margin-bottom: 10px;
    @include tablets {
        text-align: center;
    }
}
.form-block__input {
    background-color: transparent;
    width: 100%;
    min-height: 50px;
    position: relative;
    &:focus {
        outline-color: $orange;
        border-bottom: $orange;
    }
    &--comment {
        resize: none;
        width: 100%;
    }
}
.form__btn {
    color: #ffffff;
    background-color: $orange;
    text-transform: uppercase;
    padding: 30px 115px;
    font-weight: bold;
    font-size: 18px;
    border: solid 3px $orange;
    &:hover {
        background:  linear-gradient(90deg, rgba(255,138,0,1) 0%, rgba(255,157,0,1) 100%);
    }
    &:focus {
        border-color: rgba(255, 102, 0, 0.326);
    }
}


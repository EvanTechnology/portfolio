mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className)
  img(src=require(`images/${path}`) class=className)

mixin menu(className)
  ul(class=className)
    - var menuContent = ["Main", "About Me", "My Skills", "Portfolio", "Reviews", "Contacts"]
    each item in menuContent
      li.menu__item
        a(href="#").menu__link #{item}

mixin socials(className)
  div(class=className)
  ul.socials__list
    - var socialsListContent = ["insta", "vk", "github"]
    each item in socialsListContent
      li.socials__item
        a(href="#").socials__link
          +icon(`${item}`, 'socials__icon') 
include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      .hamburger
          button(type="button").hamburger__menu
            span.hamburger__item
  
      .parallax
        .parallax__layer(data-speed="0.05")
          picture.parallax__image
            source(media="(min-width: 1800px)", src=require(`images/content/parallax_layer7_3660.jpg`))
            source(media="(min-width: 1200px)", src=require(`images/content/parallax_layer7_1830.jpg`))
            source(media="(min-width: 768px)", src=require(`images/content/parallax_layer7_1200.jpg`))
            img.parallax__disabled-image(src=require(`images/content/bg_main_page.jpg`))
        .parallax__layer(data-speed="0.16")
          picture.parallax__image
            source(media="(min-width: 1800px)", src=require(`images/content/parallax_layer6_3660.png`))
            source(media="(min-width: 1200px)", src=require(`images/content/parallax_layer6_1830.png`))
            source(media="(min-width: 768px)", src=require(`images/content/parallax_layer6_1200.png`))
            img.parallax__disabled-image(src='')
        .parallax__layer(data-speed="0.25")
          picture.parallax__image
            source(media="(min-width: 1800px)", src=require(`images/content/parallax_layer4_3660.png`))
            source(media="(min-width: 1200px)", src=require(`images/content/parallax_layer4_1830.png`))
            source(media="(min-width: 768px)", src=require(`images/content/parallax_layer4_1200.png`))
            img.parallax__disabled-image(src='')
        .parallax__layer(data-speed="0.28")
          picture.parallax__image
            source(media="(min-width: 1800px)", src=require(`images/content/parallax_layer3_2560.png`))
            source(media="(min-width: 1200px)", src=require(`images/content/parallax_layer3_1830.png`))
            source(media="(min-width: 768px)", src=require(`images/content/parallax_layer3_1200.png`))
            img(src='')
        .parallax__layer(data-speed="0.1")
          picture.parallax__image
            source(media="(min-width: 1800px)", src=require(`images/content/parallax_layer2_3660.png`))
            source(media="(min-width: 1200px)", src=require(`images/content/parallax_layer2_1830.png`))
            source(media="(min-width: 768px)", src=require(`images/content/parallax_layer2_1200.png`))
            img(src='')
        .parallax__layer(data-speed="0")
          picture.parallax__image
            source(media="(min-width: 1800px)", src=require(`images/content/parallax_layer1_3660.png`))
            source(media="(min-width: 1200px)", src=require(`images/content/parallax_layer1_1830.png`))
            source(media="(min-width: 768px)", src=require(`images/content/parallax_layer1_1200.png`))
            img(src='')
        
      section(id="main").main-section
        .container.main-section__container
          header.header
            div.logo
            nav.header__menu
              +menu('menu__list')
            +socials('socials')
          .main-section__content.welcome
            .welcome__text This is the personal website of the developer
            h1.welcome__title Evgenii Konkov
          .scroll
            a(href="#about").scroll__link
              .scroll__name scroll
              +icon('scroll', 'scroll__icon') 
      section(id="about").aboutme
        .container.aboutme-container
              .aboutme__content
                .aboutme__profile.profile
                  .profile__image
                    .avatar
                      +image('content/user.jpg', 'avatar__photo')
                  .profile__info
                    ul.profile__info-list
                      -
                        var profileData = [
                          ['My Address', 'Adelaide, SA'],
                          ['Occupation', 'Front-End Developer'],
                          ['Edication', 'Saint-Petersburg State Engeniering University, 2002, Diploma Economics and Managmen'],
                        ]
                      each item in profileData
                        li.profile__line
                          .profile__line-name #{item[0]}
                          .profile__line-info #{item[1]}  
                .aboutme__intro.intro
                  .intro__greeting Hey, My name is
                  h2.intro__name Evgenii Konkov
                  .intro__text I do like to create an up-to-date web-sites and apps. It's a huge joy for me to work with something new.
                    
                  .aboutme__ps I created this web-site as a graduation project in a Loftschool. I'll update my info and portfolio shortly, but it's already looks so good!
      section(id="skills").skills
          .skills__container.container
            h2.title.skills__title What can I do for you
            p.skills__text I created this web-site as a graduation project in a Loftschool. I'll update my info and portfolio shortly, but it's already looks so good!
            .skills-widget
              .skills__image
                +image('content/hands_skills_page.png', 'skills__image-pic')
              #skills-component
            

        
      section(id="portfolio").fullscreen-section.portfolio-section
          .container.portfolio
            h2.title.portfolio__title Portfolio
            .portfolio__content
              #slider-component
  
      .testimonials-box
          .testimonials-box__decor
          section(id="reviews").reviews-section
            .container.reviews
              #reviews-box
          section(id="contact").contacts-section
            .container.contacts
              h2.title.contacts__title Send a query
              form(novalidate).form
                .form__column
                  .form__row
                    label.form-block.form-block--name
                      .form-block__title Write your name here
                      input(type="text" name="name" placeholder="Evgenii Konkov" required).form-block__input.form-block__input--name
                      .error.error-name Enter your name, please
                    label.form-block.form-block--email
                      .form-block__title Write your email
                      input(type="email" name="email" placeholder="Evgeniikonkov1@gmail.com" required).form-block__input.form-block__input--email
                      .error.error-email Enter your email, please
                  .form__row
                    label.form-block.form-block--message
                      .form-block__title Your message
                      textarea(name="message" placeholder="Write your query here, please" required).form-block__input.form-block__input--message
                      .error.error-message Write the message, please
                  .form__row
                    button(type="submit").btn.form__btn Send

      footer.footer
        .container.footer-container
          .footer__sideinfo
            .footer__year
              .year 2020
            .footer__name
              .footer__name-owner Evgenii Konkov
              .footer__name-info This is the personal website of the developer
          .footer__main
            nav.menu
              +menu('menu__list--footer')
            .footer__content
              .footer__content-column
                .footer__content-text I created this web-site as a graduation project in a Loftschool.
                +socials('socials--footer')
              .footer__content-column
                .footer__quote-text Always code as if the guy who ends up maintaining your code will be a violent psychopath who knows where you live.
                .footer__quote-author Martin Golding

      //.entry
        +image('content/bg_main_page.jpg', "entry__bg")
        .entry__window
          button(type="button").entry__btn-close
            span.entry__btn-element
          .entry__title Authorization
          form.entry__form
            .entry__form-row.entry__form-row--name
              .entry__form-row-title Name
              input(type="text" placeholder= "Terminator" required).entry__form-input
            .entry__form-row.entry__form-row--password
              .entry__form-row-title Password
              input(type="password" placeholder="*******" required).entry__form-input
            .entry__form-row--btn
              button(type='submit').entry__submit-btn Login
